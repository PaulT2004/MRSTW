@model MRSTW.Web.Models.Auth.AuthUserDataLogin

@{
     Layout = "~/Views/Shared/_LayoutBlank.cshtml";
     ViewBag.Title = "Login";
}


<div class="auth-panel-wrapper">
     <div class="auth-image-container">
          <div class="panel panel-filled auth-panel login-centered-panel">
               <div class="panel-body">
                    @Html.ValidationSummary(true)
                    @using (Html.BeginForm("Index", "Auth", FormMethod.Post, new { @id = "LoginForm", novalidate = "novalidate" }))
                    {
                         @Html.AntiForgeryToken()

                         <div class="form-group">
                              @Html.LabelFor(model => model.Username, new { @class = "control-label" })
                              @Html.TextBoxFor(model => model.Username, new
                              {
                                  @class = "form-control",
                                  placeholder = "Enter name here",
                                  title = "Enter your name"
                              })
                         </div>

                         <div class="form-group">
                              @Html.LabelFor(model => model.Password, new { @class = "control-label" })
                              @Html.PasswordFor(model => model.Password, new
                              {
                                  @class = "form-control",
                                  placeholder = "Enter password here",
                                  title = "Enter your password"
                              })
                         </div>

                         <div>
                              <button class="btn btn-accent">Enter</button>
                              <a class="btn btn-default" href="@Url.Action("Register", "Auth")">Sign Up</a>
                         </div>
                    }
               </div>
          </div>
     </div>
</div>
