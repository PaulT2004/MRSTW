@{
     Layout = "~/Views/Shared/_LayoutBlank.cshtml";
     ViewBag.Title = "Login";
}

<div class="panel panel-filled">
     <div class="panel-body">
          @Html.ValidationSummary(True)
          @using (Html.BeginForm("Index", "Login", FormMethod.Post, new { @id = "LoginForm"}))
          {
               @Html.AntiForgeryToken()
               <form action="/" id="loginForm" novalidate>
                    <div class="form-group">
                         @Html.LabelFor(model.Username, new { @class = "control-label" })
                         @Html.TextBoxFor(model.Password, new
                         {
                              placeholder = "Enter name here",
                              title = "Enter your name",
                              value = "",
                              name = "username",
                              id = "username",
                              @class = "form-control"

                         })
                    </div>
                    <div class="form-group">
                         @Html.LabelFor(model.Password, new { @class = "control-label" })
                         @Html.TextBoxFor(model.Password, new
                         {
                              Type = "password",
                              placeholder = "Enter password here",
                              title = "Enter your password",
                              value = "",
                              name = "password",
                              id = "password",
                              @class = "form-control"
                         })
                    </div>
                    <div>
                         <button class="btn btn-accent">Enter</button>
                         <a class="btn btn-default" href="register.cshtml">Sign up</a>
                    </div>


               </form>
          }
     </div>
</div>